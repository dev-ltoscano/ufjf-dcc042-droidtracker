    android:layout_height="wrap_content">

    <PreferenceCategory android:title="@string/settings_category_deviceinfo" >
        <Preference
            android:id="@+id/deviceUuid"
            android:key="deviceUuid"
            android:title="UUID" />
        <Preference
            android:id="@+id/deviceName"
            android:key="deviceName"
            android:title="Nome do Dispositivo" />
        <Preference
            android:id="@+id/deviceSystemName"
            android:key="deviceSystemName"
            android:title="Sistema do Dispositivo" />
